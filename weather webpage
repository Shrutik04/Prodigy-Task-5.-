// javascript code

const apiKey = "78e37788515c42b793a710090a9aa2e5"; // Keep your existing API key

async function getWeather() {
    const city = document.getElementById("city").value.trim();
    if (!city) {
        document.getElementById("weatherResult").innerHTML = '<p class="initial-message">Please enter a city name.</p>';
        return;
    }
    fetchWeatherData(`https://api.openweathermap.org/data/2.5/weather?q=${city}&appid=${apiKey}&units=metric`);
}

function getLocationWeather() {
    if (navigator.geolocation) {
        // Display loading state while waiting for permission/location
        document.getElementById("weatherResult").innerHTML = '<p class="initial-message">Finding your location...</p>';

        navigator.geolocation.getCurrentPosition(
            (position) => {
                const lat = position.coords.latitude;
                const lon = position.coords.longitude;
                fetchWeatherData(`https://api.openweathermap.org/data/2.5/weather?lat=${lat}&lon=${lon}&appid=${apiKey}&units=metric`);
            },
            () => {
                document.getElementById("weatherResult").innerHTML = '<p class="initial-message">Location access denied or failed to retrieve location.</p>';
            }
        );
    } else {
        document.getElementById("weatherResult").innerHTML = '<p class="initial-message">Geolocation not supported by this browser.</p>';
    }
}

async function fetchWeatherData(url) {
    const weatherResultDiv = document.getElementById("weatherResult");
    weatherResultDiv.innerHTML = '<p class="initial-message">Loading weather data...</p>'; // Loading state

    try {
        const response = await fetch(url);
        const data = await response.json();

        if (data.cod !== 200) {
            weatherResultDiv.innerHTML = `<p class="initial-message">Error: ${data.message}</p>`;
            return;
        }

        // Extract required data
        const { name, sys: { country }, main: { temp, humidity }, weather, wind: { speed } } = data;
        const condition = weather[0].description;
        const iconCode = weather[0].icon;
        const iconUrl = `http://openweathermap.org/img/wn/${iconCode}@2x.png`;

        // Update the UI with the attractive format
        weatherResultDiv.innerHTML = `
            <h2>${name}, ${country}</h2>
            <div class="weather-icon-container">
                <img src="${iconUrl}" alt="${condition}" class="weather-icon">
                <p class="condition-text">${condition.charAt(0).toUpperCase() + condition.slice(1)}</p>
            </div>
            <p>ðŸŒ¡ Temperature: <strong>${Math.round(temp)}Â°C</strong></p>
            <p>ðŸ’§ Humidity: <strong>${humidity}%</strong></p>
            <p>ðŸŒ¬ Wind Speed: <strong>${speed} m/s</strong></p>
        `;
        
        // Add subtle animation class after content loads
        weatherResultDiv.classList.add('fade-in');
        setTimeout(() => weatherResultDiv.classList.remove('fade-in'), 500);

    } catch (error) {
        weatherResultDiv.innerHTML = '<p class="initial-message">An error occurred while fetching data.</p>';
    }
}
